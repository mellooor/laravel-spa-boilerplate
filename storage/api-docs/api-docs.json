                                "properties": {
                                    "name": {
                                        "type": "string",
                                        "example": "Tony Parker"
                                    },
                                    "email": {
                                        "type": "string",
                                        "format": "email",
                                        "example": "tparker@example.com"
                                    },
                                    "password": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
                                    },
                                    "password_confirmation": {
                                        "type": "string",
                                        "format": "password",
                                        "example": "password"
